<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F6F9FF"
    tools:context=".HouseActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:fontFamily="@font/mont_semibold"
        android:text="Общежития"
        android:gravity="bottom"
        android:textColor="@color/white"
        android:background="#1E4391"
        android:textSize="19sp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/mont_semibold"
        android:text="Номер"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <HorizontalScrollView
        android:id="@+id/numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/button_dorm2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="2"
                    android:textSize="28sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:button="@null"
                    android:textColor="@drawable/radio_button_text_color_selector"
                    android:background="@drawable/custom_radio_button_background"
                    android:backgroundTint="@drawable/radio_button_background_color_selector" />

                <RadioButton
                    android:id="@+id/button_dorm4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="4"
                    android:textSize="28sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:button="@null"
                    android:textColor="@drawable/radio_button_text_color_selector"
                    android:background="@drawable/custom_radio_button_background"
                    android:backgroundTint="@drawable/radio_button_background_color_selector" />

                <RadioButton
                    android:id="@+id/button_dorm5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="5"
                    android:textSize="28sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:button="@null"
                    android:textColor="@drawable/radio_button_text_color_selector"
                    android:background="@drawable/custom_radio_button_background"
                    android:backgroundTint="@drawable/radio_button_background_color_selector" />

                <RadioButton
                    android:id="@+id/button_dorm6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="6"
                    android:textSize="28sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:button="@null"
                    android:textColor="@drawable/radio_button_text_color_selector"
                    android:background="@drawable/custom_radio_button_background"
                    android:backgroundTint="@drawable/radio_button_background_color_selector" />

                <RadioButton
                    android:id="@+id/button_dorm8"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="8"
                    android:textSize="28sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:button="@null"
                    android:textColor="@drawable/radio_button_text_color_selector"
                    android:background="@drawable/custom_radio_button_background"
                    android:backgroundTint="@drawable/radio_button_background_color_selector" />

                <RadioButton
                    android:id="@+id/button_dorm10"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="10"
                    android:textSize="28sp"
                    android:paddingStart="6dp"
                    android:paddingEnd="2dp"
                    android:button="@null"
                    android:textColor="@drawable/radio_button_text_color_selector"
                    android:background="@drawable/custom_radio_button_background"
                    android:backgroundTint="@drawable/radio_button_background_color_selector" />

                <RadioButton
                    android:id="@+id/button_dorm11"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/mont_semibold"
                    android:text="11"
                    android:textSize="28sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="2dp"
                    android:button="@null"
                    android:textColor="@drawable/radio_button_text_color_selector"
                    android:background="@drawable/custom_radio_button_background"
                    android:backgroundTint="@drawable/radio_button_background_color_selector" />

            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/app_name"
        app:layout_constraintBottom_toTopOf="@id/bottom_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numbers">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/main_sections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mont_semibold"
                android:text="Основные разделы"
                android:layout_marginBottom="477dp"
                android:textColor="#000000"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/payment_button"
                android:layout_width="315dp"
                android:layout_height="98dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/payment_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fire_button"/>

            <ImageButton
                android:id="@+id/fire_button"
                android:layout_width="315dp"
                android:layout_height="98dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/fire_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/medical_button"/>

            <ImageButton
                android:id="@+id/medical_button"
                android:layout_width="315dp"
                android:layout_height="98dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/medical_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/rules_button"/>

            <ImageButton
                android:id="@+id/rules_button"
                android:layout_width="315dp"
                android:layout_height="98dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/rules_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Button 1 -->
        <ImageButton
            android:id="@+id/house_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="42dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/house_icon"
            app:layout_constraintEnd_toStartOf="@id/paid_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Button 2 -->
        <ImageButton
            android:id="@+id/paid_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="42dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/paid_icon"
            app:layout_constraintEnd_toStartOf="@id/menu_button"
            app:layout_constraintStart_toEndOf="@id/house_button"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Button 3 -->
        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#1E4391"
            android:src="@drawable/menu_icon"
            android:background="@drawable/rounded_button"
            app:layout_constraintEnd_toStartOf="@id/search_button"
            app:layout_constraintStart_toEndOf="@id/paid_button"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Button 4 -->
        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="42dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/search_icon"
            app:layout_constraintEnd_toStartOf="@id/settings_button"
            app:layout_constraintStart_toEndOf="@id/menu_button"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Button 5 -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="42dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/settings_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_button"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>